{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "composite": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "importsNotUsedAsValues": "error" -> "verbatimModuleSyntax": false, 레거시 문법 대체됨
    "verbatimModuleSyntax": false
  },
  "exclude": ["./*.js"]
}
